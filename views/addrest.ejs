  <form action="/addrest" method="post" style="width:60%;margin-left:auto;margin-right:auto">
    <div class="form-group">
      <label for="nombrerest">Nombre restaurante</label>
      <input type="text" class="form-control" name="nombrerest" placeholder="Ingrese el nombre del restaurante" required>
    </div>
    <div class="form-group">
      <label for="latitud">Latitud</label>
      <input type="number" step="0.000001" class="form-control" name="latitud" placeholder="Ingrese la latitud" required>
    </div>
    <div class="form-group">
      <label for="longitud">Longitud</label>
      <input type="number" step="0.000001" class="form-control" name="longitud" placeholder="Ingrese la longitud" required>
    </div>
    <div class="form-group">
      <label for="contacto">Contacto</label>
      <textarea class="form-control" name="contacto" rows="3"></textarea>
    </div>
    <div class="form-group">
      <label for="horario">Horario</label>
      <textarea class="form-control" name="horario" rows="3"></textarea>
    </div>
    <div class="form-group">
    <label for="precio">Precio</label>
      <select class="form-control" name="precio" required>
        <option>barato</option>
        <option>medio</option>
        <option>caro</option>
      </select>
    </div>
    <div class="form-group">
    <label for="exampleFormControlSelect2">Tipo de comida</label>
    <select multiple class="form-control" name="tipocomida">
      <option>mexicana</option>
      <option>casera</option>
      <option>italiana</option>
      <option>rapida</option>
      <option>gourmet</option>
      <option>caribena</option>
    </select>
  </div>
  <div class="form-group">
    <label for="exampleFormControlFile1">Agregar imagen...</label>
    <input type="file" class="form-control-file" name="foo">
  </div>
    <button type="submit" class="btn btn-primary btn-block">Crear</button>
  </form>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
